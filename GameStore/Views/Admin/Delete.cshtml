@model Game
@{
    ViewData["Title"] = "Удаление игры";
}

<div class="row">
    <div class="col-lg-12">
        <div class="heading-section">
            <h4><em>Удаление</em> игры</h4>
        </div>

        <div class="delete-confirmation" style="background-color: #27292a; border-radius: 23px; padding: 30px;">
            <div class="alert alert-danger">
                <h5>Вы уверены, что хотите удалить эту игру?</h5>
                <p>Это действие нельзя будет отменить.</p>
            </div>

            <div class="game-details mb-4">
                <div class="row">
                    <div class="col-md-3">
                        <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/popular-01.jpg" : Model.ImageUrl)"
                             alt="@Model.Title" class="img-fluid rounded">
                    </div>
                    <div class="col-md-9">
                        <h4>@Model.Title</h4>
                        <p>@Model.Description</p>
                        <div class="d-flex gap-3 mt-3">
                            <div><strong>Жанр:</strong> @Model.Genre</div>
                            <div><strong>Цена:</strong> @Model.Price.ToString("C0")</div>
                            <div><strong>Рейтинг:</strong> @Model.Rating</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <div class="main-button">
                    <a asp-controller="Admin" asp-action="Index">Отмена</a>
                </div>
                <form asp-controller="Admin" asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="main-border-button">
                        <button type="submit" class="text-danger">Удалить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>