@model IEnumerable<SteamTopUp>
@{
    ViewData["Title"] = "Пополнения Steam";
}

<div class="row">
    <div class="col-lg-12">
        <div class="heading-section">
            <h4><em>Управление</em> пополнениями Steam</h4>
        </div>

        <div class="admin-menu mb-4" style="background-color: #27292a; border-radius: 23px; padding: 20px;">
            <div class="row">
                <div class="col-md-4 text-center">
                    <div class="main-button">
                        <a asp-controller="Admin" asp-action="Index">Игры</a>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="main-button">
                        <a asp-controller="Admin" asp-action="Orders">Заказы</a>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="main-button">
                        <a asp-controller="Admin" asp-action="TopUps" class="active">Пополнения Steam</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="topups-list" style="background-color: #27292a; border-radius: 23px; padding: 30px;">
            <h4 class="mb-4">Все пополнения Steam</h4>

            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Steam ID</th>
                            <th>Email</th>
                            <th>Сумма</th>
                            <th>Дата</th>
                            <th>Статус</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var topUp in Model)
                        {
                            <tr>
                                <td>@topUp.Id</td>
                                <td>@topUp.SteamId</td>
                                <td>@topUp.Email</td>
                                <td>@topUp.Amount.ToString("C0")</td>
                                <td>@topUp.Date.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <span class="badge @(topUp.IsCompleted ? "bg-success" : "bg-warning")">
                                        @(topUp.IsCompleted ? "Завершен" : "В обработке")
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a href="#" class="btn btn-info btn-sm">Подробнее</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>