@model IEnumerable<Game>
@{
    ViewData["Title"] = "Админ панель";
}

<div class="row">
    <div class="col-lg-12">
        <div class="heading-section">
            <h4><em>Админ</em> Панель</h4>
        </div>

        <div class="admin-menu mb-4" style="background-color: #27292a; border-radius: 23px; padding: 20px;">
            <div class="row">
                <div class="col-md-4 text-center">
                    <div class="main-button">
                        <a asp-controller="Admin" asp-action="Index" class="active">Игры</a>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="main-button">
                        <a asp-controller="Admin" asp-action="Orders">Заказы</a>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="main-button">
                        <a asp-controller="Admin" asp-action="TopUps">Пополнения Steam</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="games-list" style="background-color: #27292a; border-radius: 23px; padding: 30px;">
            <div class="d-flex justify-content-between mb-4">
                <h4>Управление играми</h4>
                <div class="main-button">
                    <a asp-controller="Admin" asp-action="Create">Добавить игру</a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Изображение</th>
                            <th>Название</th>
                            <th>Жанр</th>
                            <th>Платформа</th>
                            <th>Цена</th>
                            <th>Рейтинг</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var game in Model)
                        {
                            <tr>
                                <td>@game.Id</td>
                                <td>
                                    <img src="@(string.IsNullOrEmpty(game.ImageUrl) ? "/images/popular-01.jpg" : game.ImageUrl)"
                                         alt="@game.Title" style="width: 50px; height: 50px; border-radius: 10px;">
                                </td>
                                <td>@game.Title</td>
                                <td>@game.Genre</td>
                                <td>@game.Platform</td>
                                <td>@game.Price.ToString("C0")</td>
                                <td>@game.Rating</td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-controller="Admin" asp-action="Edit" asp-route-id="@game.Id"
                                           class="btn btn-warning btn-sm">Изменить</a>
                                        <a asp-controller="Admin" asp-action="Delete" asp-route-id="@game.Id"
                                           class="btn btn-danger btn-sm">Удалить</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>