@model IEnumerable<Order>
@{
    ViewData["Title"] = "Заказы";
}

<div class="row">
    <div class="col-lg-12">
        <div class="heading-section">
            <h4><em>Управление</em> заказами</h4>
        </div>

        <div class="admin-menu mb-4" style="background-color: #27292a; border-radius: 23px; padding: 20px;">
            <div class="row">
                <div class="col-md-4 text-center">
                    <div class="main-button">
                        <a asp-controller="Admin" asp-action="Index">Игры</a>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="main-button">
                        <a asp-controller="Admin" asp-action="Orders" class="active">Заказы</a>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="main-button">
                        <a asp-controller="Admin" asp-action="TopUps">Пополнения Steam</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="orders-list" style="background-color: #27292a; border-radius: 23px; padding: 30px;">
            <h4 class="mb-4">Все заказы</h4>

            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Игра</th>
                            <th>Ключ</th>
                            <th>Дата заказа</th>
                            <th>Статус</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.Email</td>
                                <td>@order.Game?.Title</td>
                                <td>@order.Key</td>
                                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <span class="badge @(order.IsCompleted ? "bg-success" : "bg-warning")">
                                        @(order.IsCompleted ? "Завершен" : "В обработке")
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a href="#" class="btn btn-info btn-sm">Подробнее</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>