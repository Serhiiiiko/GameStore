@model IEnumerable<Order>
@{
    ViewData["Title"] = "История покупок";
}

<div class="gaming-library history-page">
    <div class="col-lg-12">
        <div class="heading-section mb-4">
            <h4><em>Ваши</em> покупки</h4>
        </div>

        <div class="purchase-overview" style="background-color: #27292a; border-radius: 23px; padding: 20px; margin-bottom: 30px;">
            <div class="row">
                <div class="col-md-8">
                    <h5><i class="fa fa-info-circle me-2" style="color: #ec6090;"></i>Информация о покупках</h5>
                    <p>Здесь отображаются все ваши покупки. Ключи активации также отправлены на указанный вами email.</p>
                    <p>При возникновении проблем с активацией, пожалуйста, обратитесь в службу поддержки.</p>
                </div>
                <div class="col-md-4 text-end d-flex align-items-center justify-content-end">
                    <div class="stats-box text-center me-3">
                        <h4 style="color: #ec6090;">@Model.Count()</h4>
                        <span>Всего покупок</span>
                    </div>
                    <div class="stats-box text-center">
                        <h4 style="color: #ec6090;">@Model.Sum(o => o.Game?.Price ?? 0)₽</h4>
                        <span>Общая сумма</span>
                    </div>
                </div>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="empty-purchases" style="background-color: #27292a; border-radius: 23px; padding: 40px; text-align: center;">
                <img src="/images/empty-cart.png" alt="Нет покупок" style="max-width: 150px; margin-bottom: 20px;">
                <h5>Покупки не найдены</h5>
                <p>Возможно, вы совершали покупки с другого устройства или использовали другой email.</p>
                <div class="main-button mt-4">
                    <a asp-controller="Games" asp-action="Index">Перейти в каталог</a>
                </div>
            </div>
        }
        else
        {
            <div class="purchase-filters d-flex justify-content-between align-items-center mb-4" style="background-color: #27292a; border-radius: 23px; padding: 15px 20px;">
                <div>
                    <span class="me-2">Сортировать по:</span>
                    <button class="btn btn-sm" style="background-color: #1f2122; color: #fff; margin-right: 5px;">Дате ↓</button>
                    <button class="btn btn-sm" style="background-color: #1f2122; color: #fff;">Названию</button>
                </div>
                <div>
                    <span class="badge bg-success me-2">Активные ключи: @Model.Count()</span>
                </div>
            </div>

            <div class="purchases-container" style="background-color: #27292a; border-radius: 23px; padding: 20px;">
                @foreach (var order in Model)
                {
                    <div class="purchase-item" style="border-bottom: 1px solid #444; padding: 15px 0; margin-bottom: 5px;">
                        <div class="row align-items-center">
                            <div class="col-md-1">
                                <img src="@(string.IsNullOrEmpty(order.Game?.ImageUrl) ? "/images/game-01.jpg" : order.Game.ImageUrl)"
                                     alt="@order.Game?.Title" class="img-fluid rounded" style="max-width: 60px;">
                            </div>
                            <div class="col-md-2">
                                <h6 class="mb-0">@order.Game?.Title</h6>
                                <small style="color: #ec6090;">@order.Game?.Genre</small>
                            </div>
                            <div class="col-md-2">
                                <small class="d-block text-muted">Дата покупки:</small>
                                <span>@order.OrderDate.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="col-md-4">
                                <small class="d-block text-muted">Ключ активации:</small>
                                <div class="key-container" style="position: relative; background: #1f2122; padding: 6px 12px; border-radius: 5px; display: inline-block;">
                                    <span class="key-text">@order.Key</span>
                                    <button class="copy-btn" style="background: none; border: none; position: absolute; right: 5px; top: 6px; cursor: pointer;"
                                            onclick="copyToClipboard('@order.Key')">
                                        <i class="fa fa-copy" style="color: #ec6090;"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <small class="d-block text-muted">Статус:</small>
                                <span class="badge @(order.IsCompleted ? "bg-success" : "bg-warning")">
                                    @(order.IsCompleted ? "Завершено" : "В обработке")
                                </span>
                            </div>
                            <div class="col-md-1 text-end">
                                <span style="font-weight: bold; color: #ec6090;">@order.Game?.Price.ToString("C0")</span>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="main-button mt-4 text-center">
                <a asp-controller="Games" asp-action="Index">Перейти в каталог</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                alert('Ключ скопирован!');
            }, function() {
                alert('Не удалось скопировать ключ');
            });
        }
    </script>
}